@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h1 class="display-4">THIS IS MY WEB HADES WORKS </h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<header class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
    <div class="container">
        <!-- Logo hoặc tiêu đề -->
        <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
            <i class="fas fa-store"></i> HADES
        </a>

        <!-- Nút quay về trang chính -->
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary">
                <i class="fas fa-home"></i> Trang chính
            </a>
        }

    </div>
</header>
